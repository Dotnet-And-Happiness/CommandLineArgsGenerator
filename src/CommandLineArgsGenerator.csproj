<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <LangVersion>latest</LangVersion>
        <TargetFramework>netstandard2.0</TargetFramework>
        <Authors>Dotnet-And-Happiness</Authors>
        <DevelopmentDependency>True</DevelopmentDependency>
        <NoWarn>$(NoWarn);NU5128</NoWarn>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <PackageTags>source generator</PackageTags>
        <Description>Source generator to generate command line args parser</Description>
        <PackageProjectUrl>https://github.com/Dotnet-And-Happiness/CommandLineArgsGenerator</PackageProjectUrl>
        <RepositoryUrl>https://github.com/Dotnet-And-Happiness/CommandLineArgsGenerator</RepositoryUrl> 
        <Version>0.2.3</Version>
    </PropertyGroup>
    
    <PropertyGroup Condition="'$(Configuration)' == 'Release'">
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    
    <ItemGroup>
        <AdditionalFiles Include="Template.cshtml" IsRazorTemplate="true"/>
    </ItemGroup>
    <ItemGroup>
        <PackageReference PrivateAssets="all" Include="Microsoft.CSharp" Version="4.5.0"/>
        <PackageReference PrivateAssets="all" Include="System.Threading.Tasks.Extensions" Version="4.5.4"/>
        <PackageReference PrivateAssets="all" Include="Microsoft.CodeAnalysis.CSharp" Version="3.9.0"/>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="3.3.2">
            <PrivateAssets>all</PrivateAssets>
            <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
        </PackageReference>
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="MiniRazor.CodeGen" PrivateAssets="all" Version="2.1.2"/>
        <PackageReference Include="MiniRazor.Runtime" GeneratePathProperty="true" PrivateAssets="all" Version="2.1.2" IncludeRuntimeDependency="false"/>
    </ItemGroup>
    <ItemGroup>
        <None Include="$(OutputPath)\$(AssemblyName).dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false"/>
        <None Pack="true" Include="$(PKGMiniRazor_Runtime)\lib\netstandard2.0\MiniRazor.Runtime.dll" PackagePath="analyzers/dotnet/cs" Visible="false"/>
    </ItemGroup> 
</Project>
